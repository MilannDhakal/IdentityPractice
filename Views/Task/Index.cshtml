@using Microsoft.AspNetCore.Identity;
@model List<Tasks>
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Task List </h2>
    </div>
</div>


@if (SignInManager.IsSignedIn(User))
{
    @if (User.IsInRole("Admin"))
    {
        <div class="p-4 border rounded">
            <a asp-action="Create" asp-controller="Task" class="btn btn-primary">Create Task</a>
            @if (Model.Count() > 0)
            {
                <table class="table table-borderless">
                    <tr>
                        <th>
                            Task Name
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Assigned Time
                        </th>
                        <th>
                            Assigned To
                        </th>
                        <th>
                            Status
                        </th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.Description
                            </td>
                            <td>
                                @item.AssignedTime
                            </td>

                            <td>
                                @item.User
                            </td>

                            <td>
                                @item.Status
                            </td>
                            <td>
                                <div class="text-center">
                                    <form asp-action="Delete" asp-route-userId="@item.Id" class="btn btn-info text-white">
                                        <a asp-action="Edit" asp-route-userId="@item.Id" class="btn btn-info text-black">
                                            Edit
                                        </a>
                                        <button type="submit" onclick="return confirm('Are you sure you want to delete this?')"
                                class="btn btn-danger">
                                            Delete
                                        </button>
                                    </form>
                                </div>


                            </td>
                        </tr>
                    }
                </table>
            }
        </div>

    }
    else
    {
        <div class="p-4 border rounded">
            @*            <a asp-action="Create" asp-controller="Task" class="btn btn-primary">Create Task</a>*@
            @if (Model.Count() > 0)
            {
                <table class="table table-borderless">
                    <tr>
                        <th>
                            Task Name
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Assigned Time
                        </th>
                        <th>
                            Status
                        </th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.Description
                            </td>
                            <td>
                                @item.AssignedTime
                            </td>

                            <td>
                                @item.Status
                            </td>
                            <td>
                                <div class="text-center">
                                    <form method="post">
                                        <a asp-action="StartTask" asp-controller="Task" asp-route-id="@item.Id" class="btn btn-primary">Start</a>
                                        <a asp-action="PauseTask" asp-controller="Task" asp-route-id="@item.Id" class="btn btn-primary">Pause </a>
                                        <a asp-action="CompletedTask" asp-controller="Task" asp-route-id="@item.Id" class="btn btn-primary"> Stop</a>


                                        @*                                        <button asp-action="Save" asp-controller="Task" class="btn btn-primary">Save</button>
                        *@

                                    </form>
                                </div>
                            </td>
                            <td>
                                <a asp-action="Index" asp-controller="Log" asp-route-id=@item.Id class="btn btn-primary">View Log</a>
                            </td>
                        </tr>
                    }
                </table>
            }
        </div>




    }
}